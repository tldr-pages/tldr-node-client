{
  "rules": {
    "indent": [2, 2],
    "quotes": [2, "single"],
    "linebreak-style": [2, "unix"],
    "semi": [2, "always"],
    "no-console": 0,
    "arrow-parens": [2, "always"],
    "arrow-body-style": [2, "always"],
    "array-callback-return": 2,
    "no-magic-numbers": [2, {
      "ignore": [-1, 0, 1, 2],
      "ignoreArrayIndexes": true,
      "detectObjects": true
    }],
    "no-warning-comments": 1,
    "handle-callback-err": 2
  },
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "extends": "eslint:recommended"
}
